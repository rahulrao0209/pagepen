{
    "manifest_version": 3,
    "name": "Pagepen",
    "version": "1.0",
    "description": "A web-text annotation toolkit",
    "author": "Rahul Rao",
    "action": {
      "default_title": "Pagepen",
      "default_popup": "/src/chrome/popup/popup.html"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["/src/chrome/scripts/contentScript.ts"]
      }
    ]
  }