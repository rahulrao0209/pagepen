{
    "manifest_version": 3,
    "name": "Pagepen",
    "version": "1.0",
    "description": "A web-text annotation toolkit",
    "author": "Rahul Rao",
    "permissions": ["activeTab", "sidePanel"],
    "action": {
        "default_title": "Highlight and annotate text on webpages."
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ]
}
